{
  "name": "tsoapy",
  "description": "TypeScript OpenAPI Client",
  "version": "0.0.3",
  "author": "Jakob Heuser",
  "license": "MIT",
  "homepage": "https://github.com/jakobo/tsoapy/",
  "repository": "jakobo/tsoapy.git",
  "scripts": {
    "build": "run-s tsup",
    "clean": "shx rm -rf dist && shx mkdir dist",
    "gen": "run-p 'generate:*'",
    "generate:petstore": "openapi-typescript https://petstore3.swagger.io/api/v3/openapi.yaml --path-params-as-types --output ./src/__generated__/petstore.ts",
    "lint-staged": "lint-staged",
    "rel": "release-it",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsup": "tsup",
    "typecheck": "tsc --noEmit"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "package.json",
    "README.md",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14.19.0",
    "pnpm": "7.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "lint-staged": "13.0.3",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^6.1.1",
    "prettier": "^2.6.0",
    "release-it": "^15.5.0",
    "shx": "^0.3.4",
    "syncpack": "^7.2.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3"
  }
}
